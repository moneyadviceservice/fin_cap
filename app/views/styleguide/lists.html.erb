<h3 class="styleguide__subheading" id="default-list">Default list</h2>
<div class="styleguide__example">
  <ul class="list">
    <%- (1..4).each do |n|  %>
      <li><%= "List item #{n}" %></li>
    <% end %>
  </ul>
</div>

<h3 class="styleguide__subheading">Code</h3>
<xmp>
  <ul class="list">
    <li>List item 1</li>
    <li>List item 2</li>
    <li>List item 3</li>
    <li>List item 4</li>
  </ul>
</xmp>

<h3 class="styleguide__subheading" id="link-list">Link list</h2>
<div class="styleguide__example">
  <ul class="list list--links">
    <%- (1..4).each do |n| %>
      <li><a href="http://www.fincap.org.uk/"><%= "List item #{n}" %></a></li>
    <% end %>
  </ul>
</div>

<h3 class="styleguide__subheading">Code</h3>
<xmp>
  <ul class="list list--links">
    <li><a href="#">List item 1</a></li>
    <li><a href="#">List item 2</a></li>
    <li><a href="#">List item 3</a></li>
    <li><a href="#">List item 4</a></li>
  </ul>
</xmp>

<h3 class="styleguide__subheading" id="grouped-cta-list">Grouped CTA list</h2>
<div class="styleguide__example">
  <ul class="list list--grouped-cta">
    <%- (1..4).each do |n| %>
      <li><a href="http://www.fincap.org.uk/"><%= "List item #{n}" %></a></li>
    <% end %>
  </ul>
</div>

<h3 class="styleguide__subheading">Code</h3>
<xmp>
  <ul class="list list--grouped-cta">
    <li><a href="#">List item 1</a></li>
    <li><a href="#">List item 2</a></li>
    <li><a href="#">List item 3</a></li>
    <li><a href="#">List item 4</a></li>
  </ul>
</xmp>

<h3 class="styleguide__subheading" id="numbered-list">Numbered list</h2>
<div class="styleguide__example">
  <dl class="list list--numbered">
    <%- (1..4).each do |n| %>
      <dt class="list--numbered__title"><%= "List item #{n}" %></dt>
      <dd class="list--numbered__content">
        List item description content
      </dd>
    <% end %>
  </dl>
</div>

<h3 class="styleguide__subheading">Code</h3>
<xmp>
  <dl class="list list--numbered">
    <dt class="list--numbered__title">List item 1</dt>
    <dd class="list--numbered__content">
      List item description content
    </dd>
    <dt class="list--numbered__title">List item 2</dt>
    <dd class="list--numbered__content">
      List item description content
    </dd>
  </dl>
</xmp>

<h3 class="styleguide__subheading" id="lettered-list">Lettered list</h2>
<div class="styleguide__example">
  <ul class="list list--lettered">
    <%- %w(T E S T).each do |letter, index| %>
      <li class="list--lettered-item">
        <div class="list--lettered-item__letter" aria-hidden="true"><%= letter %></div>
        <div class="list--lettered-item__content">
          <a href="#"><%= "List item #{index}" %></a>
          <p class="list--lettered-item__inner-content">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam non feugiat dolor. Praesent ac eleifend eros.</p>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<h3 class="styleguide__subheading">Code</h3>
<xmp>
  <ul class="list list--lettered">
    <li class="list--lettered-item">
      <div class="list--lettered-item__letter" aria-hidden="true">
        {LETTER}
      </div>
      <div class="list--lettered-item__content">
        <a href="#">
          Heading link
        </a>
        <p class="list--lettered-item__inner-content">
          Content
        </p>
      </div>
    </li>
  </ul>
</xmp>

